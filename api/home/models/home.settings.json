{
  "kind": "singleType",
  "collectionName": "homes",
  "info": {
    "name": "Home"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "landingTitle": {
      "type": "string"
    },
    "landingSubtitle": {
      "type": "string"
    },
    "landingQuotes": {
      "type": "component",
      "repeatable": true,
      "component": "quote.quote"
    },
    "landingBanners": {
      "type": "component",
      "repeatable": true,
      "component": "banner.image-and-text"
    },
    "productContainer": {
      "type": "component",
      "repeatable": true,
      "component": "product.product-carousel"
    },
    "quoteIcon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
